<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/day_tv"
        android:textSize="20sp"
        android:textColor="@color/black1"
        android:text="29æ—¥"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/year_month_tv"
        android:textSize="10sp"
        android:text="2020.4"
        app:layout_constraintBaseline_toBaselineOf="@id/day_tv"
        app:layout_constraintLeft_toRightOf="@id/day_tv"
        android:layout_marginLeft="7dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_header"
        app:layout_constraintTop_toBottomOf="@id/year_month_tv"
        android:layout_marginTop="7dp" />

</androidx.constraintlayout.widget.ConstraintLayout>