<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/head1"
        android:background="@drawable/shape_circle"
        android:id="@+id/head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/account_tv"
        android:text="糖果的快了"
        app:layout_constraintLeft_toRightOf="@id/head"
        app:layout_constraintTop_toTopOf="@id/head"
        android:layout_marginLeft="12dp"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/text_tv"
        app:layout_constraintLeft_toLeftOf="@id/account_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account_tv"
        android:layout_marginRight="20dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:lineSpacingExtra="5dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="就很大空间和温度计阿瓦达d肯定好jaw大河网就可获得w9dawuidjawdjalkwdja我ID阿瓦IDu打扫IC哈利的文化大号娓娓道来煎熬完蛋了吧我ID奥我午觉都啊呜打我弟可接受的拉科技网络的煎熬网络的"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_tv"
        android:textSize="12sp"
        android:text="04-29 17:56"
        app:layout_constraintLeft_toLeftOf="@id/account_tv"
        app:layout_constraintTop_toBottomOf="@id/text_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>